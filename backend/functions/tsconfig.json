{
    "compilerOptions": {
      "module": "CommonJS",
      "moduleResolution": "Node",
      "target": "ES2017",
      "outDir": "lib",
      "rootDir": "src",
      "sourceMap": true,
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true
    },
    "compileOnSave": true,
    "include": [
      "src/**/*.ts"
    ],
    "exclude": [
      "node_modules",
      "lib"
    ]
  }
  